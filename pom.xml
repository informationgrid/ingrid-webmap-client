<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>de.ingrid</groupId>
		<artifactId>ingrid-base-pom</artifactId>
		<version>3.1.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.ingrid</groupId>
	<artifactId>ingrid-webmap-client</artifactId>
	<version>3.2.0-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>InGrid Web Map Client</name>
	<scm>
		<connection>scm:svn:https://harrison.its-technidata.de/svn/ingrid/ingrid-webmap-client/trunk</connection>
		<developerConnection>scm:svn:https://harrison.its-technidata.de/svn/ingrid/ingrid-webmap-client/trunk</developerConnection>
	</scm>
	<build>
		<finalName>${project.artifactId}</finalName>

		<!-- ==================== PLUGINS ==================== -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<!-- add class files to WEB-INF/classes also config files -> CONFIG-FILES needed at runtime in classes-path -->
					<archiveClasses>false</archiveClasses>
					<archive>
						<manifestEntries>
							<ingridComponentType>WEBMAP_CLIENT</ingridComponentType>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>        
				<configuration>
					<nosuffix>false</nosuffix>
					<preProcessAggregates>true</preProcessAggregates>
					<excludes>
						<!-- don't compress lib files by default -->
						<exclude>**/lib/extjs/**</exclude>
						<exclude>**/lib/openlayers/**</exclude>
						<exclude>**/lib/geoext/**</exclude>
						<exclude>**/lib/proj4js/**</exclude>
					</excludes>
					<aggregations>
						<aggregation>
							<!-- admin -->
							<removeIncluded>false</removeIncluded>
							<insertNewLine>true</insertNewLine>
							<output>${project.build.directory}/${project.build.finalName}/admin/js/admin-all-min.js</output>
							<inputDir>${project.build.directory}/${project.build.finalName}/</inputDir>
							<includes>
								<include>shared/**/*-min.js</include>
								<include>admin/js/*-min.js</include>
								<include>admin/js/modules/*-min.js</include>
								<include>admin/js/modules/data/*-min.js</include>
								<include>admin/js/controls/**/*-min.js</include>
								<include>admin/js/modules/basic/controls/*-min.js</include>
								<include>admin/js/modules/basic/*-min.js</include>
								<include>admin/js/modules/services/controls/*-min.js</include>
								<include>admin/js/modules/services/*-min.js</include>
								<include>admin/js/modules/areas/controls/*-min.js</include>
								<include>admin/js/modules/areas/*-min.js</include>
								<include>admin/js/**/*-min.js</include>
							</includes>
						</aggregation>
						<aggregation>
							<!-- frontend -->
							<removeIncluded>false</removeIncluded>
							<insertNewLine>true</insertNewLine>
							<output>${project.build.directory}/${project.build.finalName}/frontend/js/frontend-all-min.js</output>
							<inputDir>${project.build.directory}/${project.build.finalName}/</inputDir>
							<includes>
								<include>lib/openlayers.addins/LoadingPanel-min.js</include>
								<include>lib/geoext.ux/SimplePrint-min.js</include>
								<include>shared/**/*-min.js</include>
								<include>frontend/**/*-min.js</include>
							</includes>
						</aggregation>
						<aggregation>
							<!-- downloads -->
							<removeIncluded>false</removeIncluded>
							<insertNewLine>true</insertNewLine>
							<output>${project.build.directory}/${project.build.finalName}/downloads/README.txt</output>
							<inputDir>${project.build.directory}/${project.build.finalName}/</inputDir>
							<includes>
								<include>downloads/README.txt</include>
							</includes>
						</aggregation>
					</aggregations>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- ==================== DEPENDENCY MANAGEMENT ==================== -->
	<!-- ALWAYS USE DEPENDENCY MANAGEMENT WHEN OVERWRITING VERSIONS FROM ingrid-base-pom, SO ASSEMBLY PLUGIN WORKS !!!!!!!! -->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.thoughtworks.xstream</groupId>
				<artifactId>xstream</artifactId>
				<version>1.3.1</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

